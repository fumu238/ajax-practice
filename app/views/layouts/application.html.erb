<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<header>
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
   <div class="col-md-1"></div>
   <div class="col-md-10">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <h3 class="head"> <%= link_to "Bookers",root_path %> </h3>
    </div>
    
    <div class="collapse navbar-collapse" id="navbarEexample1">
      <ul class="nav navbar-nav navbar-right">
        <div>
           <%= search_form_for @q, html: {class: 'form-inline'} do |f| %>
             <%= f.text_field :title_or_body_cont, class: "search-form form-control",:size => '30', placeholder: '本を探す' %>
           <%= f.submit "検索", class: 'btn btn-default btn-sm' %>
            <% end %>
       </div>

      <% if user_signed_in? %>

        <li><%= link_to " Home", user_path(current_user.id), class: 'glyphicon glyphicon-home' %></li>
        <li><%= link_to " Users", users_path, class: 'glyphicon glyphicon-user' %></li>
        <li><%= link_to " Books", books_path, class: 'glyphicon glyphicon-book' %></li>
        <li><%= link_to " Log out", destroy_user_session_path, :method => :delete, class: 'glyphicon glyphicon-log-out' %></li>

          <% else %>

        <li><%= link_to " Home", root_path, class: 'glyphicon glyphicon-home' %></li>
        <li><%= link_to " About",about_path, class: 'glyphicon glyphicon-check' %></li>
        <li><%= link_to " Sign up", new_user_registration_path, class: 'glyphicon glyphicon-phone' %></li>
        <li><%= link_to " Log in", new_user_session_path, class: 'glyphicon glyphicon-log-in' %></li>

        <% end %>

      </ul>
    </div>
    </div>
    <div class="col-md-1"></div>
    </div>
   </nav>
</header>

    <%= yield %>

    <footer>
    CopyRight Fumiya.inc
  </footer>
</html>
