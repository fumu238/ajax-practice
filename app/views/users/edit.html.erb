 <% if @user.errors.any? %>
    <h3>入力した内容にエラーが<%= @user.errors.count %>件あります</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


<div class="editbox">
  <h2>プロフィール編集
  </h2>
  <%= form_for(@user) do |f| %>
 
    <div class="edit">
    <%= f.label :Name %><br />
    <%= f.text_field :name %>
    </div>

    <div class="user-edit-image">
   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "pro.jpg", size:"60x60" %>
    </div>

    <div class="edit">
    <%= f.attachment_field :profile_image,placeholder:"プロフィール画像" , multiple: true %>
    </div>

    <div class="edit">
    <%= f.label :introduction %><br />
    <%= f.text_field :intro %>
    </div>

    <%= f.submit "更新", class:'btn btn-info' %>
  <% end %>
</div>