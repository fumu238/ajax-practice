

<%= render 'form', user: @user %>


    <div class="col-lg-9">
     <h2>Books</h2>

     <table class="table table-striped">
		  <th>Image</th>
		  <th>Title</th>
		  <th>Opinion</th>
          <th></th>
         <% @books.each do |book| %>
          <tr>
    	   <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "pro.jpg",size: '40x40' %>
    	   <td><%= book.title %>
    	   <td><%= book.body %>
           <td><%= link_to "Show", book_path(book.id) %>
          </tr>
       <% end %>
      </table>

     </div>
   </div>
</div>