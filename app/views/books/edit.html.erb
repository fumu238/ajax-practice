<% if @book.errors.any? %>
    <h3>入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<div class="editbox">

  <h2>Editing Book</h2>

   <%= form_for(@book) do |f| %>

   <h4>Title</h4>
   <%= f.text_field :title %>

   <h4>Body</h4>
   <%= f.text_area :body %><br />

   <%= f.submit 'Update book',class: 'btn btn-info' %>
  <% end %>

</div>

  <div class="command creafix">

  <p class="editcommand">
  <%= link_to "Back", book_path(@book.id)%>
  </p>

 </div>